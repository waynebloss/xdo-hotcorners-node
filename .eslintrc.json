{
  "root": true,
  "extends": "eslint:recommended",
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "semi": ["error", "always"],
    "no-console": "off",
    "no-trailing-spaces": "error",
    "no-extra-semi": "error"
  }
}